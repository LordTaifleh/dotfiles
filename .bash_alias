#alias Pacman / AUR
alias aur='sudo aura -A'
alias aurs='aura -As'
alias aurr='sudo aura -r'
alias pac='sudo aura -S'
alias pacs='aura -Ss'
alias pacr='sudo aura -R'
alias pacrr='sudo aura -Rs'
alias auraclean='sudo aura -Rns $(pacman -Qtdq)'
alias aurupdate='sudo aura -Ayu ; sudo aura -Syu --noconfirm'
#alias for wifi
alias wlandown='sudo ip link set wlp4s0 down'
alias wlan52='sudo netctl switch-to wlp4s0-52 && sudo systemctl restart netctl dhcpcd'
alias wlanedu='sudo netctl switch-to wlp4s0-eduroam && sudo systemctl restart netctl dhcpcd'
alias wlanhome='sudo netctl switch-to wlp4s0-raamfeld && sudo systemctl restart netctl dhcpcd'
alias jxe='journalctl -xe'
