# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3blocks -c /home/omicron/.config/i3blocks/i3blocks.conf
        strip_workspace_numbers yes
  	position               bottom
  	workspace_buttons      yes
	tray_output primary
        height 22 

	font pango: FontAwesome, SNFS Display 6 
	colors{
	
		separator           	$c7
		background              $c0
		statusline          	$white
		focused_workspace   	$c4 	$c4     $c0
		active_workspace    	$c0     $c0     $c0
		inactive_workspace   	$c0	$c0     $c7
		urgent_workspace 	$c3     $c3     $c7
		}#			rahmen	fill	text
	}

